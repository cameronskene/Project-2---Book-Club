<div class="container">
    
    {{#if req.query.q}}
    <h3>Results:</h3>
    {{else}}
    <h3>Enter the name of a book you want to favourite!</h3>
    {{/if}}
    <form method="get">
        <input type="text" name="q" placeholder="Book name">
        <button type="submit">Search</button>
    </form>
    <div class="row">
        {{#each books}}
        <div class="col-lg-4">
            <p>
                {{this.volumeInfo.title}}
                <a href='/books/{{this.id}}+{{this.volumeInfo.authors.[0]}}+{{this.volumeInfo.title}}/new-favorite' class='btn btn-success btn-sm'>Save</a>
            </p>
        </div>
    </div>
    {{/each}}
</div>