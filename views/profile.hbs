<h1>Test Profile</h1>

<div class="row">
    <div class="col-6">
        <img src="/images/lisaicon.png">
    </div>
    <div class="col-6">
        <h3>Hi
            <span>{{ user.username}}</span> !
        </h3>
    </div>
</div>
<div id="search">
    <form id="myForm">
        <div class="input-field">
            <input type="search" id="books">
            <label for="search">Search books</label>
        </div>
        <button class="btn btn-primary">Search</button>
    </form>
</div>

<div>
    <h3>My favorite books</h3>
    {{#each user}}
    <ul>
        <li>
            {{this.books}}
        </li>
    </ul>
    {{/each}}
</div>
<div>
    <h3>My book clubs</h3>
    <ul> {{#each user.clubs}}
        <li>
            {{this}}
        </li>
    </ul>{{/each}}
</div>